<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RGBOBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/silver</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RGBPanelLabel" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RGBPanelComponentLabel" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RGBPanelComponent" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?vectorColor</item>
    </style>

    <style name="Theme.Rgbtool.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Rgbtool.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.Rgbtool.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="RGBTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/light_accent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?colorPrimary</item>
        <item name="tabSelectedTextColor">?colorAccent</item>
    </style>

    <style name="ACRA" parent="Base.Theme.AppCompat.Dialog.MinWidth"/>
    <style name="CardViewLight" parent="CardView"/>
    <style name="CardViewDark" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/dark_card</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="BottomSheetDialog.Dark" parent="Theme.Design.BottomSheetDialog">
        <item name="android:background">@color/dark_card</item>
        <item name="android:textColor">@color/light_silver</item>
    </style>
</resources>
